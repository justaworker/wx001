/* pages/detail/detail.wxss */

.container {
  padding: 20rpx;
  display: flex;
}

.pic {
  width: 100rpx;
  min-width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  border: 1px solid black;
}

.user-info-con {
  display: flex;
  align-items: center;
  width: 95%;
  margin-bottom: 20rpx;
  overflow: hidden;
  justify-content: flex-end;
}

.user-info-con .user-info-btn {
  height: 60rpx;
  line-height: 60rpx;
  width: 220rpx;
  font-size: 30rpx;
  margin: 0rpx;
  padding: 0rpx;
}

.user-info-con .userinfo-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.user-info-con .userinfo-nickname {
  color: #aaa;
  font-size: 30rpx;
}

.obj-con {
  display: flex;
  width: 100%;
  overflow: hidden;
}

.obj-con .title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  /* width: 600rpx; *//* height: 100rpx; */
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  margin-left: 20rpx;
}

.right .tag {
  margin-top: 20rpx;
}

.video-poster {
  background-color: #fff;
  position: fixed;
}

.data-con {
  margin-top: 20rpx;
  background-color: #fff;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.dialog-view {
  height: 950rpx;
}

.data-item-con {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  padding-bottom: 27px;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}

.step-con {
  display: flex;
  position: relative;
  flex-shrink: 1;
  flex-basis: 50%;
  min-height: 160rpx;
}

.step-header {
  position: relative;
  flex-grow: 0;
  width: 80rpx;
}

.step-line {
  width: 4rpx;
  top: 0;
  bottom: 0;
  left: 20rpx;
  position: absolute;
  border-color: inherit;
  background-color: #c0c4cc;
}

.step-icon {
  margin-left: 5px;
  top: -10px;
  position: relative;
  z-index: 1;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 24rpx;
  height: 24rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  background: #fff;
  transition: 0.15s ease-out;
  border-radius: 50%;
  border: 1rpx solid;
  border-color: inherit;
}

.data-image-con {
  display: flex;
}

.data-image-con-right {
  font-size: 20rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.data-image-con-right .tag {
  margin-top: 40rpx;
}

.file-name {
  width: 260rpx;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
}

.downLoad-pic {
  width: 200rpx;
  min-width: 200rpx;
  height: 200rpx;
  /* border-radius: 20rpx;
  border: 1px solid black; */
}
