.container {
  padding: 50rpx 0;
}

.mark-header-con, .mark-body-con, .mark-body-title {
  width: 96%;
}

.mark-header-con {
  display: flex;
  justify-content: space-between;
}

.mark-body-title {
  height: 100rpx;
  border-top: 1rpx solid rgb(125, 133, 125);
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.mark-body-title .row-td-left {
  margin-left: 10rpx;
}

.search-mark-btn {
  line-height: 60rpx;
  height: 60rpx;
  width: 140rpx;
  font-size: 30rpx;
  display: inline-block;
}

.search-mark-con {
  border: 1rpx solid #484;
  border-radius: 10rpx;
  padding: 0rpx;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
}

.search-mark-input {
  display: inline-block;
  padding: 0 10rpx;
}

.new-mark-btn {
  width: 180rpx;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  display: inline-block;
  margin: 0rpx;
}

.mark-body-row {
  padding: 10rpx;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.row-td-left, .row-td-center, .row-td-right {
  display: inline-block;
  font-size: 30rpx;
}

.row-td-left {
  width: 220rpx;
  padding-left: 20rpx;
}

.row-td-center {
  width: 100%;
  overflow: hidden;
  padding-left: 20rpx;
}

.row-td-right {
  width: 110rpx;
  text-align: center;
}

.save-mark, .reset-mark {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.mark-footer-con {
  display: flex;
  margin-top: 30rpx;
}

.mark-con-row {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
}

.mark-con-row text {
  font-size: 30rpx;
  width: 110rpx;
}

.mark-con-row .row-td-input {
  font-size: 30rpx;
  padding-left: 10rpx;
  border: none;
  line-height: 60rpx;
  height: 60rpx;
  width: 100%;
}

.user-info-con {
  display: flex;
  align-items: center;
  width: 95%;
  margin-bottom: 50rpx;
  overflow: hidden;
  justify-content: flex-end;
}

.user-info-con .user-info-btn {
  height: 60rpx;
  line-height: 60rpx;
  width: 220rpx;
  font-size: 30rpx;
  margin: 0rpx;
  padding: 0rpx;
}

.user-info-con .userinfo-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.user-info-con .userinfo-nickname {
  color: #aaa;
  font-size: 30rpx;
}

@font-face {
  font-family: "iconfont";
  src: url('data:application/x-font-woff;charset=utf-8;base64,') format('woff'),
         url('iconfont.ttf?t=1532420117729') format('truetype'); /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-jiantoushang:after {
  content: "\e62d";
}

.icon-jiantouxia:after {
  content: "\e62e";
}
